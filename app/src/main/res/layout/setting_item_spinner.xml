<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/spinSettingChoices"
        android:layout_alignBottom="@+id/spinSettingChoices"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"
        tools:text="@string/image_size"
        android:id="@+id/tvSettingName"
        android:textStyle="bold"
        android:textSize="20sp"

        />

    <Spinner
        android:id="@+id/spinSettingChoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvSettingName"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"

        />

</RelativeLayout>